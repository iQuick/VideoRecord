<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.imli.lib_movierecorder">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity android:name="me.imli.lib_movierecorder.activity.VideoRecorderActivity" android:screenOrientation="portrait" />
        <activity android:name="me.imli.lib_movierecorder.activity.VideoPreviewActivity" android:screenOrientation="portrait" />

    </application>

</manifest>
